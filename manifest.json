{
    "name": "Epitech Mouli Bot",
    "description": "Extension for Epitech Mouli Bot",
    "version": "1.0.0",
    "permissions": [
        "tabs",
        "cookies"
    ],
    "host_permissions": [
        "https://*.epitech.eu/*",
        "https://*.microsoftonline.com/*",
        "https://*.live.com/*",
        "http://127.0.0.1:3000/*"
    ],
    "background": {
        "service_worker": "src/background.js"
    },
    "action": {
        "default_popup": "src/popup/popup.html",
        "default_title": "Epitech Mouli Bot"
    },
    "icons": {
        "16": "assets/icons/16.png",
        "32": "assets/icons/32.png",
        "48": "assets/icons/48.png",
        "128": "assets/icons/128.png"
    },
    "manifest_version": 3
}
